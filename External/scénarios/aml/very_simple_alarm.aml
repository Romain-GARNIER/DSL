app VerySimpleAlarm initial state off {
    bricks 
         Actuator digital led : 8
         Actuator digital buzzer : 13
         Sensor digital button : 10
     states 
         off {
             led <= LOW
             buzzer <= LOW
             if (button == HIGH) => on
         } 
         on {
             led <= HIGH
             buzzer <= HIGH
             if (button == LOW) => off
     }
}
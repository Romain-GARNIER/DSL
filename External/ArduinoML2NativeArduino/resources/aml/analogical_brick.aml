app SimpleAlarm initial state off {
    bricks 
         Actuator analog led : 4
         Sensor analog button : 1
         
     states 
         off {
             led <= 0
             if (button > 200) => on
         } 
         on {
             led <= 100
             if (button > 400) => on2
             if(button < 200) => off
     }
         on2 {
             led <= 255
             if (button < 400) => on
     }
}
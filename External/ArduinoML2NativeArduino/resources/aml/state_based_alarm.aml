app StateBasedAlarm initial state off {
    bricks 
         Actuator led : 8
         Sensor button : 10
     states 
         off {
             led <= LOW
             if(button is HIGH) => on
         } 
         on {
             led <= HIGH
             if(button is LOW) => off2
     }
     	off2{
     		led <= HIGH
     		if(button is HIGH) => off
     	}
}
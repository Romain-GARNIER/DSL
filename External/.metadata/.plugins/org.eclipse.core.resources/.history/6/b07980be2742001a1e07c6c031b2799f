app DualCheckAlarm initial state off1 {
    bricks 
         Actuator led : 13
         Sensor button1 : 8
         Sensor button2 : 11
     states 
         off1 {
             led <= LOW
             button1 is HIGH => off2
             button1 is LOW => off1
         }
         off2{
         	 led <= LOW
             button2 is HIGH => on
             button1 is LOW => off1
             button2 is LOW => off2
         }
         on {
             led <= HIGH
             button1 is LOW => off1
             button2 is LOW => off2
     }
}
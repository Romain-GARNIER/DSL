app SimpleAlarm initial state off {
    bricks 
         Actuator led : 10
         Actuator buzzer : 13
         Sensor button : 8
     states 
         off {
             led <= LOW
             buzzer <= LOW
             button is HIGH => on
         } 
         on {
             led <= HIGH
             buzzer <= HIGH
             button is LOW => off
     }
     	
     	off_course{
     		button is LOW => off
     		button is HIGH => on
     		
     	}
}
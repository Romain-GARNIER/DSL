app SimpleAlarm initial state off {
    bricks 
         Actuator led : 10
         Actuator buzzer : 13
         Sensor button2 : 8
         Sensor button1 : 11
     states 
         off {
             led <= LOW
             buzzer <= LOW
             if(button1 is HIGH) AND (button2 is HIGH) => on
         } 
         on {
             led <= HIGH
             buzzer <= HIGH
             if(button1 is HIGH) AND (button2 is HIGH) => off_course
             if(button1 is HIGH) AND (button2 is HIGH) => off
     }
     	
     	off_course{
     		if(button1 is HIGH) AND (button2 is HIGH) => on
     		
     	}
}
app SimpleAlarm initial state off {
    bricks 
         Actuator led : 11
         Actuator buzzer : 13
         Sensor button : 8
     states 
         off {
             red_led <= LOW
             buzzer <= LOW
             button <= LOW
             button is HIGH => on
         } 
         on {
             red_led <= HIGH
             buzzer <= HIGH
             button <= HIGH
             button is HIGH => off
     }
}
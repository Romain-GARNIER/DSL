app Exception initial state off {
    bricks 
         Actuator led : 8
         Sensor button1 : 12
         Sensor button2 : 10
     states 
         off {
         	led <= LOW
         	if(button1 is HIGH) AND (button2 is HIGH) => on
         }
         on {
             led <= HIGH
             if(button1 is HIGH) OR (button2 is HIGH) => off
     }
}
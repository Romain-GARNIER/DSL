app MultiStateAlarm initial state off {
    bricks 
         Actuator led : 13
         Actuator buzzer : 11
         Sensor button : 8
     states 
         off {
             led <= LOW
             buzzer <= LOW
             button is HIGH => buzz_on
         } 
         buzz_on {
             led <= LOW
             buzzer <= HIGH
             button is HIGH => led_on
     }
     led_on{
     		led <= HIGH
             buzzer <= LOW
             button is HIGH => off
     }
}
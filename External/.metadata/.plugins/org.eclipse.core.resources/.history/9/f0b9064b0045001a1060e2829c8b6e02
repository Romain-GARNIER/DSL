app SimpleAlarm initial state off {
    bricks 
         Actuator led : 10
         Actuator buzzer : 13
         Sensor button : 8
     states 
         off {
             led <= LOW
             buzzer <= LOW
             if(button is HIGH) => on
         } 
         on {
             led <= HIGH
             buzzer <= HIGH
             button is LOW => off
     }
}
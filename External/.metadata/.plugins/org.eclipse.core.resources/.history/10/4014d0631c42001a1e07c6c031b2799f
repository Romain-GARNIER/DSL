app DualCheckAlarm initial state off1 {
    bricks 
         Actuator red_led : 13
         Sensor button1 : 8
         Sensor button2 : 11
     states 
         off1 {
             red_led <= LOW
             button1 is HIGH => off2
             button1 is LOW => off1
         } 
         off2{
         	red_led <= LOW
             button2 is HIGH => on
             button1 is LOW => off1
             button2 is LOW => off2
         }
         off3{
         	red_led <= LOW
             button2 is HIGH => on
             button1 is LOW => off1
             button2 is LOW => off3         }
         off4{
         	red_led <= LOW
             button1 is HIGH => on
             button1 is LOW => off4
             button2 is LOW => off2
         }
         on {
             red_led <= HIGH
             button1 is LOW => off4
             button2 is LOW => off3
     }
}
app MultiStateAlarm initial state off {
    bricks 
         Actuator led : 13
         Actuator buzzer : 11
         Sensor button : 8
     states 
         off {
             led <= LOW
             buzzer <= LOW
             button is HIGH => buzzon
         } 
         buzzon {
             led <= LOW
             buzzer <= HIGH
             button is HIGH => ledon
     	}
     	ledon{
     		 led <= HIGH
             buzzer <= LOW
             button is HIGH => off
     	}
}